{
  "name": "neocities.boreydev",
  "version": "0.1.0",
  "description": "",
  "main": "build-script.js",
  "scripts": {
    "compile:src": "tsc",
    "compile:build": "tsc build.ts --outDir .",
    "watch:ts": "tsc --watch",
    "watch:html": "nodemon --watch src --ext md,css,html --exec \"npm run build\"",
    "start:server": "live-server public/",
    "build": "npm run compile:src && npm run compile:build && node build.js",
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:html\" \"npm run start:server\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^16.18.107",
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  }
}
